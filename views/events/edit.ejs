<%- include('../partials/header') %>

<div class="container-fluid mt-5" style="max-width: 60%">
    <h2><%= title %></h2>
    <form action="/events/<%= event._id %>?_method=PUT" method="POST">
        <div class="mb-3">
            <label class="form-label">Event Name</label>
            <input type="text" class="form-control" name="eventName" value="<%= event.eventName %>" required>
        </div>
        <div class="mb-3">
            <label class="form-label">Date</label>
            <input type="datetime-local" class="form-control" name="date" value="<%= event.formattedDate %>" required>
        </div>
        <div class="mb-3">
            <label class="form-label">Place</label>
            <input type="text" class="form-control" name="place" value="<%= event.place %>">
        </div>
        <div class="mb-3">
            <label class="form-label">Cost</label>
            <select class="form-select" name="cost">
                <option value="Free">Free</option>
                <option value="$">$</option>
                <option value="$$">$$</option>
                <option value="$$$">$$$</option>
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea class="form-control" name="description" id="event-desc"><%= event.description %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Update Event</button>
    </form>
</div>

<%- include('../partials/footer') %>
